<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/homeListFragment">

    <fragment
        android:id="@+id/nav_home"
        android:name="br.edu.ifrs.adotapet.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/nav_login"
        android:name="br.edu.ifrs.adotapet.ui.home.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login"
        >
        <action
            android:id="@+id/action_nav_login_to_nav_home"
            app:destination="@id/nav_home" />
        <action
            android:id="@+id/action_nav_login_to_nav_registration"
            app:destination="@id/nav_registration" />
    </fragment>

    <fragment
        android:id="@+id/nav_registration"
        android:name="br.edu.ifrs.adotapet.ui.home.RegistrationFragment"
        android:label="Cadastro"
        tools:layout="@layout/fragment_registration"
        />
    <fragment
        android:id="@+id/addPetFragment"
        android:name="br.edu.ifrs.adotapet.ui.home.AddPetFragment"
        android:label="fragment_add_pet"
        tools:layout="@layout/fragment_add_pet" />
    <fragment
        android:id="@+id/editPetFragment"
        android:name="br.edu.ifrs.adotapet.ui.home.EditPetFragment"
        android:label="fragment_edit_pet"
        tools:layout="@layout/fragment_edit_pet" />
    <fragment
        android:id="@+id/listPetFragment"
        android:name="br.edu.ifrs.adotapet.ui.home.ListPetFragment"
        android:label="fragment_list_pet"
        tools:layout="@layout/fragment_list_pet" />
    <fragment
        android:id="@+id/homeListFragment"
        android:name="br.edu.ifrs.adotapet.HomeListFragment"
        android:label="fragment_home_list"
        tools:layout="@layout/fragment_home_list" >
        <action
            android:id="@+id/action_homeListFragment_to_addPetFragment"
            app:destination="@id/addPetFragment" />
        <action
            android:id="@+id/action_homeListFragment_to_listPetFragment"
            app:destination="@id/listPetFragment" />
    </fragment>

</navigation>